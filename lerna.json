{
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/stories/**",
        "**/*.md"
      ],
      "allowBranch": [
        "main"
      ]
    }
  }
}
